aside.flash.row
  article.col-md-6.col-md-offset-3.col-sm-12 active-class="alert" duration="0" flash-alert="" 
    | {{flash.message}}
section.col-md-6.col-md-offset-3 ng-show="product" 
  article.well.row
    header
      p.text-center.bold Product name:  {{product.name}} 
    hr/
    .col-md-6
      | Description:
      | {{product.description}}
    .col-md-6
      | Price:
      | {{product.price | currency}}
    a.btn.btn-warning.pull-right ui-sref=("edit({itemId: product.id})")  Edit
  a.btn.btn-info ui-sref="index" 
    | Back
